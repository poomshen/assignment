<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

<!-- IOC 컨테이너(spring 전용 메모리) 안에 생성될 객체 생성 조립을 구성하는 파일  -->
<!--  
		MyBean mybean = new MyBean();
		MyBean mybean2 = new MyBean("kglim");
		Singleton single = Singleton.getInstance();
-->
    <!-- Default singleton IOC(컨테이너 안에서) -->
	<bean id="mybean" class="DI_05_Spring.MyBean">
		<constructor-arg value="kglim" />
	</bean>
	
	<!--  
		xml singleton 구현
		Singleton.getInstance();
		일단 3.x 버전 : factory-method="getInstance" 강제
		4.x 버전에서는 factory-method 쓰지 않아도 내부에서 해결
		생각 : factory-method 쓰는 것이 가독성에 도움을 주지 않을까
	-->
	<bean id="single" class="DI_05_Spring.Singleton"
	                  factory-method="getInstance">
    </bean>
	
</beans>


